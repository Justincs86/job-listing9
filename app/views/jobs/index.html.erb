<div class="dropdown pull-right">
  <button class="btn btn-default dropdown-toggle" data-toggle="dropdown">
    list
    <b class="caret" %></b>
  </button>
    <ul class="dropdown-menu">
      <li> <%= link_to("by_lower_bound", jobs_path(:order => "by_lower_bound")) %></li>
      <li> <%= link_to("by_upper_bound", jobs_path(:order => "by_upper_bound ")) %></li>
      <li> <%= link_to("time", jobs_path) %></li>
    </ul>

</div>
<br><br><br>

<table class="table table-bordered">
  <thead>
      <tr>
          <th> Job </th>
          <th> wage_lower_bound</th>
          <th> wage_upper_bound</th>
          <th> Time </th>
          <th> Opiton</th>
      </tr>
  </thead>
  <tbody>

    <% @jobs.each do |job| %>
      <tr>
        <td> <%= link_to(job.title, job_path(job)) %></td>
        <td> <%= job.wage_lower_bound %></td>
        <td> <%= job.wage_upper_bound %></td>
        <td> <%= job.created_at %></td>
        <td>
          <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-success") %>
          <%= link_to("Delete", job_path(job), method: :delete, :data => { :confirm => "Are you sure?"}, class: "btn btn-sm btn-danger") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
