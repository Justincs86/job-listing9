<div class="pull-right">
  <div class="btn btn-default">
    <%= link_to("Add a Job", new_job_path) %>
  </div >
</div>
<br><br><br>

<table class="table table-bordered">
  <thead>
      <tr>
          <th> Job </th>
          <th> Description</th>
          <th> Time</th>
          <th> Opiton</th>
      </tr>
  </thead>
  <tbody>

    <% @jobs.each do |job| %>
      <tr>
        <td> <%= link_to(job.title, job_path(job)) %></td>
        <td> <%= job.description %></td>
        <td> <%= job.created_at %></td>
        <td>
          <%= link_to("Edit", edit_job_path(job), class: "btn btn-sm btn-success") %>
          <%= link_to("Delete", job_path(job), method: :delete, :data => { :confirm => "Are you sure?"}, class: "btn btn-sm btn-danger") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
